{
    "name": "ork/core",
    "type": "library",
    "description": "Core bits of the Ork toolset.",
    "keywords": ["ork"],
    "homepage": "http://github.com/AlexHowansky/ork-core",
    "license": "MIT",
    "authors": [
        {
            "name": "Alex Howansky",
            "email": "alex.howansky@gmail.com",
            "homepage": "https://github.com/AlexHowansky"
        }
    ],
    "require": {
        "php": "^7.2"
    },
    "require-dev": {
        "mikey179/vfsStream": "^1.6.5",
        "ork/phpcs": "^2.0.7",
        "pds/skeleton": "^1.0.0",
        "phpstan/phpstan": "^0.11.1",
        "phpunit/phpunit": "^8.0.0"
    },
    "autoload": {
        "psr-4": {
            "Ork\\Core\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "OrkTest\\Core\\": "tests/"
        }
    },
    "scripts": {
        "phpcs": "phpcs",
        "phpstan": "phpstan analyze",
        "skeleton": "pds-skeleton validate",
        "test": "phpunit"
    }
}
