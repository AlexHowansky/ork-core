{
    "name": "ork/core",
    "type": "library",
    "description": "Core bits of the Ork toolset.",
    "keywords": ["ork"],
    "homepage": "http://github.com/AlexHowansky/ork-core",
    "license": "MIT",
    "authors": [
        {
            "name": "Alex Howansky",
            "email": "alex.howansky@gmail.com",
            "homepage": "https://github.com/AlexHowansky"
        }
    ],
    "require": {
        "php": "^7.2"
    },
    "require-dev": {
        "mikey179/vfsstream": "^1.6.8",
        "ork/phpcs": "^2.0.12",
        "phpstan/phpstan": "^0.11.19",
        "phpunit/phpunit": "^8.5.2"
    },
    "autoload": {
        "psr-4": {
            "Ork\\Core\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "OrkTest\\Core\\": "tests/"
        }
    },
    "scripts": {
        "markdown": "markdownlint *.md docs",
        "phpcs": "phpcs",
        "phpstan": "phpstan analyze",
        "test": "phpunit --testdox --colors=always --verbose"
    }
}
