{
    "name": "ork/core",
    "type": "library",
    "description": "Core bits of the Ork toolset.",
    "keywords": ["ork"],
    "homepage": "http://github.com/AlexHowansky/ork-core",
    "license": "MIT",
    "authors": [
        {
            "name": "Alex Howansky",
            "email": "alex.howansky@gmail.com",
            "homepage": "https://github.com/AlexHowansky"
        }
    ],
    "require": {
        "php": ">=7.3.0"
    },
    "require-dev": {
        "mikey179/vfsstream": "^1.6.10",
        "ork/phpcs": "^2.5.2",
        "phpstan/phpstan": ">=0.12.99 <1.0.0",
        "phpunit/phpunit": "^9.5.10",
        "roave/security-advisories": "dev-master"
    },
    "autoload": {
        "psr-4": {
            "Ork\\Core\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Ork\\Core\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "coverage": "XDEBUG_MODE=coverage phpunit",
        "markdown": "markdownlint *.md docs",
        "phpcs": "phpcs",
        "phpstan": "phpstan analyze",
        "post-install-cmd": "phpcs --config-set php_version 70328",
        "post-update-cmd": "phpcs --config-set php_version 70328",
        "test": "phpunit --no-coverage"
    }
}
